 	 		StringBuffer sb = new StringBuffer();
 	 		sb.append(" select nvl(max(ID)+1,1) ID from ( " +
 	 				  " select max(ID) as id from BILL_TRANSDRAFTCONSIGN union " +
 	 				  " select max(ID) as id from BILL_TRANSDRAFTCONSIGNREPLY )");
 	 		try {	//内部维护RS和PS，否则将会产生冲突,但Connection使用同一个	
 	 			localPS = transConn.prepareStatement(sb.toString());
 	 			ResultSet rs = localPS.executeQuery();
 	 			if (rs.next())
 	 			{
 	 				id = rs.getLong("ID");
 	 			}
 	 			if(localRS != null)
 	 				localRS.close();
 	 			if(localPS != null)
 	 				localPS.close();
 	 		} catch (SQLException e) {
 	 			new ITreasuryDAOException("数据库获取ID产异常",e);
 	 		}				
 	 		return id;		
 	     }
