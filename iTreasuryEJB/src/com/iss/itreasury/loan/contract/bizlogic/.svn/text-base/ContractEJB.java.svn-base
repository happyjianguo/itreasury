	public long doApproval(ContractInfo cInfo) throws RemoteException,
			IRollbackException {
		long lResult = -1;
		// add by jbpan 20120605 操作日志 start
        LoggerBtnLevelInfo logInfo = new LoggerBtnLevelInfo();
        try {
			logInfo.setBusinessType("贷款合同");
			logInfo.setTransCode(NameRef.getContractNoByID(cInfo.getContractID()));  //操作日志-业务主键-交易号
			logInfo.setActionTypeID(Constant.LoggerOfOperationType.DOAPPRVOAL);
        } catch (Exception e1) {
			e1.printStackTrace();
		}
        // add by jbpan 20120605 end
		try {
			ContractDao contractDao = new ContractDao();

			ContractInfo cInfo1 = new ContractInfo();
			cInfo1 = contractDao.findByID(cInfo.getContractID());

			// ---- added by mzh_fu 2007/06/11 审批流 begin

			InutParameterInfo inutParameterInfo = cInfo.getInutParameterInfo();
			InutParameterInfo returnInfo = new InutParameterInfo();

			// 将业务记录置入cInfo1,转换成标准map传递到审批流引擎
			inutParameterInfo.setDataEntity(cInfo1);

			// 提交审批
			returnInfo = FSWorkflowManager.doApproval(inutParameterInfo);

			ContractInfo cInfo2 = new ContractInfo();

			// 如果是最后一级,且为审批通过,更新状态为已审批
			if (returnInfo.isLastLevel()) {
				cInfo2.setContractID(cInfo.getContractID());
				cInfo2.setStatusID(LOANConstant.ContractStatus.CHECK);
				//add by jbpan 20120614 操作日志-操作类型-审批
				logInfo.setActionTypeID(Constant.LoggerOfOperationType.DOAPPRVOAL);
				lResult = contractDao.updateContractStatus(cInfo2);

				// 贴现合同的审核完成以后，需更新该合同票据的卖出状态 add by yanliu 2004-09-15
				if (cInfo.getLoanTypeID() == LOANConstant.LoanType.TX) {
					contractDao.updateContractBillSellStatus(cInfo
							.getContractID(), Constant.YesOrNo.YES);
				}
			}
			// 如果是最后一级,且为审批拒绝,更新状态为已保存
			else if (returnInfo.isRefuse()) {
				cInfo2.setContractID(cInfo.getContractID());
				cInfo2.setStatusID(LOANConstant.ContractStatus.SAVE);
				//add by jbpan 20120614 操作日志-操作类型-审批
				logInfo.setActionTypeID(Constant.LoggerOfOperationType.REFLUSE);
				lResult = contractDao.updateContractStatus(cInfo2);
			}else
				//如果没有处理则更新为审批中状态
			{
				cInfo2.setContractID(cInfo.getContractID());
				cInfo2.setStatusID(LOANConstant.ContractStatus.APPROVALING);
				//add by jbpan 20120614 操作日志-操作类型-审批
				logInfo.setActionTypeID(Constant.LoggerOfOperationType.DOAPPRVOAL);
				lResult = contractDao.updateContractStatus(cInfo2);
			}

			// ---- added by mzh_fu 2007/06/11 审批流 end
			//add by jbpan 20120605 加上操作日志-操作结果-成功        
            logInfo.setResult(Constant.LoggerOfOperResult.SUCCESS);
		} catch (Exception e) {
//          add by jbapn 20120605 start
            // 加上操作日志       
            logInfo.setResult(Constant.LoggerOfOperResult.FAIL);//操作结果-失败
            logInfo.setFailReason(e.getMessage()); //失败原因
            // add by jbpan 20120605 end
			log4j.error(e.toString());
			throw new IRollbackException(context, e.getMessage(), e);
		}
		//add by jbpan 20120605 start
        finally
        {
        	  
            LoggerResults vResult = LoggerResults.getInstance(); 
    		// 将日志记录保存到内存中
    		vResult.getResult().add(logInfo);
        }     
        //add by jbpan 20120605 end
		return lResult;
	}
	
